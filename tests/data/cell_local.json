{
  "cwd": "~/tmp/test-app",
  "main": "app.js",
  "source": "git@github.com:outbounder/angelscripts-cellcmds-testrepo.git",
  "branch": "master",
  "start": "cd {cwd}; node ./node_modules/.bin/angel app start app.js",
  "stop": "cd {cwd}; node ./node_modules/.bin/angel app stop app.js",
  "restart": "cd {cwd}; node ./node_modules/.bin/angel app restart app.js",
  "status": "cd {cwd}; node ./node_modules/.bin/angel app status app.js",
  "build": "cd {cwd}; node ./scripts/build.js",
  "install": "mkdir -p {cwd}; cd {cwd}; git clone {source} .; npm install;",
  "upgrade": "cd {cwd}; git pull origin {branch}; {restart}",
  "uninstall": "rm -rf {cwd}"
}